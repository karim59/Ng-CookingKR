 @model NgCookingKR.Models.ViewModel.RecipeHome
@{
    ViewBag.Title = "RecentRecipe";
}


<div class="col-xs-12 col-sm-9">
    <div class="content" id="content_home">
        <h1 class="page-title">Bienvenue sur NgCooking !</h1>

        <section class="section">
            <h2 class="title">~ Meilleurs recettes ~</h2>
            <div class="recettes row">


                
                @for (int i = 0; i < 4 & i< Model.RecipeNote.Count; i++)
                {

                    <div class="col-xs-6 col-sm-3 recette">
                        <a href="/Recipes/RecipeDetail?id=@Model.RecipeNote[i].recipe.IdRecipe&note=@Model.RecipeNote[i].note">
                            <img src="~/img/recettes/@Model.RecipeNote[i].recipe.Photo">
                            <div class="top" title="note : @Model.RecipeNote[i].note">
                                @for(int j=0; j< @Model.RecipeNote[i].note;j++)
                                { 
                                <span class="note">
                                    <span class="glyphicon glyphicon-heart"></span>
                                </span>
                                }
                            </div>
                            <div class="bot">
                                <p class="name">@Model.RecipeNote[i].recipe.Name</p>
                            </div>
                        </a>
                    </div>

                }
            </div>
        </section>
        @if(Session["LogedUserID"]!=null)
        {
        <section class="section newrecette">
            <div class="row">
                <div class="col-xs-12">
                    <p class="c">Vous en avez sous la toque ?!</p>
                    <p class="b">
                        <a href="/Recipes/Create" class="btn btn_color1"><span class="glyphicon glyphicon-plus-sign"></span><span>Créez une nouvelle recette</span></a>
                    </p>
                </div>
            </div>
        </section>
        }

        <section class="section">
            <h2 class="title">~ Nouvelles recettes ~</h2>
            <div class="recettes row">



                @for (int i = 0; i < 4 & i<Model.RecipeListDate.Count; i++)
                {

                    <div class="col-xs-6 col-sm-3 recette">
                        <a href="/Recipes/RecipeDetail?id=@Model.RecipeListDate[i].recipe.IdRecipe&note=@Convert.ToString(@Model.RecipeListDate[i].note)">
                            <img src="~/img/recettes/@Model.RecipeListDate[i].recipe.Photo" alt="Tarte citron meringué">
                            <div class="top" title="note : @Model.RecipeListDate[i].note">
                                
                                    @for (int j = 0; j < Model.RecipeListDate[i].note; j++)
                                    {
                                        <span class="note">
                                            <span class="glyphicon glyphicon-heart"></span>

                                        </span>
                                    }
                    
                            </div>
                            <div class="bot">
                                <p class="name">@Model.RecipeListDate[i].recipe.Name</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </section>


    </div>
</div>





