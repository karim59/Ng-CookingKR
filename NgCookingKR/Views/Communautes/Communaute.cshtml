@model NgCookingKR.Models.Communaute
@{
    ViewBag.Title = "Communaute";
}

<div id="wrapper">
    
    <main id="main">
        <div class="container">
            <div class="row">
                
                <div class="col-xs-12 col-sm-9">
                    <div class="content" id="content_users">
                        <h1 class="page-title">La communauté</h1>

                        <section class="section">
                            <h2 class="title">~ Les meilleures cuistots ~</h2>
                            <div class="sort">
                                <p>
                                    <span class="span-label">Trier par :</span>
                                    <select name="" id="">
                                        <option value="az">Ordre alphabétique (A->Z)</option>
                                        <option value="za">Ordre alphabétique (Z->A)</option>
                                        <option value="exp">Les mieux notés d'abord</option>
                                        <option value="nov">Les moins bien notés d'abord</option>
                                        <option value="prod">Les plus productifs d'abord</option>
                                        <option value="prod_desc">Les moins productifs d'abord</option>
                                    </select>
                                </p>
                            </div>
                            <div class="users row">

                                @for (int i = 0; i < Model.CreatorNote.Count; i++)
                                {

                                    int a = 0;
                                    //string st = Convert.ToString(@Model.CreatorNote[i].Note);
                                    <div class="col-xs-6 col-sm-3 user">
                                        <a href="/Communautes/CommunauteDetail?idCreator=@Model.CreatorNote[i].Creator.IdCreator&note=@Convert.ToString(@Model.CreatorNote[i].Note)">
                                            <img src="~/img/users/@Model.CreatorNote[i].Creator.CreatorPicture" alt="Hetta Van Deventer">
                                            <div class="text">
                                                <p class="name">@Model.CreatorNote[i].Creator.Name</p>
                                                <p class="level">
                                                    <span class="stars">
                                                        
                                                        @for (int j = 0; j < Model.CreatorNote[i].Note; j++)
                                                                {
                                                                    a++;
                                                            <span class="glyphicon glyphicon-star"></span>
                                                        }
                                                        
                                                    </span>
                                                    @if(a<3)
                                                    { 
                                                    <span class="status">Junior</span>
                                                    }
                                                    else if (a>= 3 && a<4)
                                                    {
                                                        <span class="status">Sénior</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="status">Expert</span>
                                                    }
                                                </p>
                                            </div>
                                        </a>
                                    </div>

                                }
                              
                            </div>
                            <div class="row showmore">
                                <div class="col-xs-12">
                                    <button type="button" class="btn btn_color1"><span class="glyphicon glyphicon-chevron-down"></span>Afficher d'avantage</button>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
</div>